<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="160.0" prefWidth="400.0" styleClass="mainFxmlClass" stylesheets="@style/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.accountmanagement.controllers.LoginController">
   <children>
      <VBox layoutX="38.0" layoutY="-45.0" prefHeight="160.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0">
               <children>
                  <FontAwesomeIcon iconName="USER" size="25">
                     <HBox.margin>
                        <Insets bottom="1.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </FontAwesomeIcon>
                  <TextField fx:id="txtUsername" prefHeight="37.0" prefWidth="315.0" promptText="Username">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="400.0">
               <children>
                  <FontAwesomeIcon iconName="KEY" size="25">
                     <HBox.margin>
                        <Insets bottom="1.0" left="10.0" right="5.0" top="10.0" />
                     </HBox.margin>
                  </FontAwesomeIcon>
                  <PasswordField fx:id="txtPassword" onAction="#login" prefHeight="37.0" prefWidth="315.0" promptText="Password">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </PasswordField>
               </children>
            </HBox>
            <HBox prefHeight="72.0" prefWidth="400.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#login" prefHeight="70.0" prefWidth="200.0" styleClass="btn-update" text="Login">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#cancel" prefHeight="70.0" prefWidth="200.0" styleClass="btn-delete" text="Cancel">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
